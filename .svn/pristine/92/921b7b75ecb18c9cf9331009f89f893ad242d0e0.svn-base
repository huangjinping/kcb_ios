#define CREATE_MSG_TABLE     @"CREATE TABLE msg (_id INTEGER PRIMARY KEY AUTOINCREMENT, msg_ID TEXT, msg_time TEXT, msg_title TEXT, msg_content TEXT, msg_read_status TEXT, msg_classify TEXT, msg_user TEXT)"

